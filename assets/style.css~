.gridded {
  background-image:
    repeating-linear-gradient(
      0deg,
      transparent, 
      transparent calc(1rem - 1px),
      lightgrey   calc(1rem - 1px),
      lightgrey        1rem
    ),
    repeating-linear-gradient(
      -90deg,
      transparent,
      transparent calc(1rem - 1px),
      lightgrey   calc(1rem - 1px),
      lightgrey        1rem
    );
  background-size: 1rem 1rem;
}

.hidden {
  display: none;
}

.centered {
  text-align: center;
}

