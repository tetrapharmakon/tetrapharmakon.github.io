/* --------------------------------------------------------------- TYPEFACES */
@import url(http://fonts.googleapis.com/css?family=Inconsolata:400,700|Patua+One|Neuton:300,400,400italic,700);

/* --------------------------------------------------------------- NORMALIZE */
@import url(https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css);

/* ----------------------------------------------------- SYNTAX HIGHLIGHTING */
@import url(highlight.css);

/* ------------------------------------------------------- RESPONSIVE LAYOUT */
/* Small screens: interpolate font size and viewport width
                  between 16px@400px and 20px@800px */
html {
  font-size: calc(12px + (100vw / 100));
}
body {
  margin: 2rem;
}

/* Big screens: centered column, fixed font size */
@media (min-width: 800px) {
  html {
    font-size: 20px;
  }
  body { 
    max-width: 36rem;
    margin: auto;
  }
}

header, main, footer {
  margin: 6rem 0;
}

/* ------------------------------------------------------------- COMMODITIES */
